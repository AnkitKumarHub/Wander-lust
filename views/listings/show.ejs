<% layout("/layouts/boilerplate.ejs") %>
<body>
  <div class="row mt-3">
    <div class="col-8 offset-3">
      <h2><%= listing.title %></h2>
      <br />
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
      <img
        src="<%= listing.image %>"
        class="card-img-top show-img"
        alt="lisitng_image"
      />
      <div class="card-body">
        <p class="card-text">
          <br />
          <%= listing.description %> <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
          <br />
          <%= listing.location %> <br />
          <%= listing.country %>
        </p>
      </div>
    </div>

    <br />
    <br />
    <div class="btns">
      <a
        href="/listings/<%=listing._id%>/edit"
        class="btn btn-dark col-1 offset-3 edit-btn"
        >Edit</a
      >

      <form action="/listing/<%=listing._id%>?_method=DELETE" method="post">
        <Button class="btn btn-dark offset-5">Delete</Button>
      </form>
    </div>



    <!--Reviews forms  -->
    <div class="col-8 offset-3 mb-3">
      <br>
      <h4>Leave a Review</h4>
      <form action=" /listings/<%= listing.id %>/reviews" method="post" class="needs-validation" novalidate>
        <div class="mb-3  mt-3">
          <label for="rating" class="form-label">Rating </label>
          <input
            type="range"
            min="1"
            max="5"
            id="rating"
            name="review[rating]"
            class="form-range"
          />
        </div>

        <div class="mb-3  mt-3">
          <label for="comment" class="form-label">Comments</label>
          <textarea
            name="review[comment]"
            id="comment"
            cols="20"
            rows="3"
            class="form-control"
            required
          ></textarea>
          <!-- client side validation for reviews (required fields, no empty comments) -->
          <div class="invalid-feedback">enter valid feedback!</div>  
        </div>
        <br>
        <button class="btn btn-outline-dark">Submit</button>
      </form>

      <hr>
      <p><b>All Reviews</b></p>
      <div class="row">
      <% for (review of listing.reviews) {%>
        <div class="card col-5 mb-3 ms-3 mt-2 ">
          <div class="card-body">
            <h5 class="card-title mt-2">John Doe</h5>
            <p class="card-text"><%= review.comment %></p>
            <p class="card-text"><%= review.rating %>Star</p>
            
          </div>
          <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post" class="mb-3 mt-2" >
            <button class="btn btn-sm btn-dark">Delete</button>
          </form>
        </div>
      <% } %>
    </div>
    </div>
  </div>
</body>
